  // Agrega la fila a la tabla
  $('table tbody tr#<%= @analytics_dashboard.id %>').replaceWith(' <%= j render "row", analytics_dashboard: @analytics_dashboard %>');
  // Muestra la alerta
  $('.alert-success').html("El registro ha sido modificado con Ã©xito").show();
  // Oculta el modal
  $('#ana-modal').modal('hide');
<% else %>
