<%= simple_form_for([@project_type, @dashboard, @analytics_dashboard], html: {role: :form, remote: true, class:'form'}) do |f| %>

  <div id="alert-success"></div>

  <% if @analytics_dashboard.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@analytics_dashboard.errors.count, "error") %> prohibited this analytics_dashboard from being saved:</h2>
      <ul><% @analytics_dashboard.errors.full_messages.each do |message| %><li><%= message %></li><% end %></ul>
    </div>
  <% end %>

  <br>
  <div class="form-group">
    <%= f.input :title, label: "Nombre", input_html: {class:"form-control form-control-sm"} %>
  </div>

  <div class="form-group">
    <%=f.input :sql_sentence, label: 'Sentencia (SELECT)', input_html: {class: "form-control form-control-sm"} %>
  </div>

  <div class="form-group">
    <%=f.input :conditions_sql, label: 'Condición (WHERE)', input_html: {class: "form-control form-control-sm"} %>
  </div>

  <div class="form-group">
    <%=f.input :group_sql, label: 'Agrupar (GROUP BY)', input_html: {class: "form-control form-control-sm"} %>
  </div>

  <div class="form-group">
    <%=f.input :order_sql, label: 'Odenar (ORDER BY)', input_html: {class: "form-control form-control-sm"} %>
  </div>

  <div class="form-group">
    <%= f.label :description, 'Descripción' %>
    <%= f.text_area :description, label: 'Descripción', rows: 3, class:"form-control form-control-sm mb-3" %>
  </div>

  <div class="form-group">
    <div class="form-check">
      <%= f.check_box :graph, class:"form-check-input" %>
      <%= f.label :graph, "Graficar", class: 'form-check-label' %>
    </div>
  </div>

  <div class="row justify-content-center">
    <button type="button" class="btn btn-secondary mr-1" data-dismiss="modal">Cancelar</button>
    <%= f.submit class: 'btn btn-primary', value: "Guardar" %>
  </div>

<% end %>
