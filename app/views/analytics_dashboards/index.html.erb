<%- model_class = AnalyticsDashboard -%>

<div class="card m-2 shadow">
  <div class="card-body">
    <div class="row">
      <div class="col-md-6">
        <h1 class="m-0">Indicadores de
          <%= project_name.name %></h1>
      </div>
      <% if can? :indicators, :new%>
      <div class="col-md-6 text-right">
        <%= link_to 'Nuevo', new_project_type_dashboard_analytics_dashboard_path(@project_type, @dashboard), class:'btn btn-primary', remote: true%>
      </div>
    <% end %>
    </div>
  </div>
</div>

<div class="card m-2 shadow">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover table-striped table-bordered m-0">
        <thead>
          <tr>
            <th>Título</th>
            <th>Descripción</th>
            <th class="text-center" colspan="3">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @analytics_dashboards.each do |analytics_dashboard| %>
            <%= render "row", analytics_dashboard: analytics_dashboard %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
