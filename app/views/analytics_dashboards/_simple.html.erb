<%= simple_form_for([@project_type, @dashboard, @analytics_dashboard], html: {role: :form, remote: true, class:'form'}) do |f| %>

  <div id="alert-success"></div>

  <% if @analytics_dashboard.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@analytics_dashboard.errors.count, "error") %> prohibited this analytics_dashboard from being saved:</h2>
      <ul><% @analytics_dashboard.errors.full_messages.each do |message| %><li><%= message %></li><% end %></ul>
    </div>
  <% end %>

  <br>
  <div class="form-group">
    <%= f.input :type_simple, as: :hidden, input_html: {value: 'true'} %>
    <%= f.input :title, label: "Nombre", input_html: {class:"form-control form-control-sm"} %>
  </div>

  <div class="form-row">
    <div class="form-group col-md-4">
      <%= f.input :analysis_type_id, :collection => analysis_types_for_select, label: "Análisis", input_html: {class:"form-control form-control-sm"}%>
    </div>
    <div class="form-group col-md-4">
      <%= f.input :project_field_id, :collection => filter_field_for_indicator_select, label: "Campo", input_html: {class:"form-control form-control-sm"} %>
    </div>
    <div class="form-group col-md-4">
      <%= f.input :group_field_id, :collection => filter_field_for_indicator_select, label: "Agrupar", input_html: {class:"form-control form-control-sm"}%>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-4">
      <%= f.input :condition_field_id, :collection => filter_field_for_indicator_select, label: 'Campo', input_html: {class:"form-control form-control-sm"} %>
    </div>
    <div class="form-group col-md-4">
      <%= f.input :filter_input, label: 'Operador', collection: ProjectType::FILTERS, input_html: {class: 'form-control form-control-sm'} %>
    </div>
    <div class="form-group col-md-4">
      <%= f.input :input_value, label: 'Valor', input_html: {class: 'form-control form-control-sm'} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, 'Descripción' %>
    <%= f.text_area :description, rows: 3, class:"form-control form-control-sm" %>
  </div>

  <div class="form-row">
    <div class="form-group col-6">
      <div class="form-check">
        <%= f.check_box :graph, class:"form-check-input" %>
        <%= f.label :graph, "Graficar", class: 'form-check-label' %>
      </div>
    </div>
    <div class="form-group col-6">
      <div class="form-check">
        <%= f.check_box :children, class:"form-check-input" %>
        <%= f.label :children, "Subformulario", class: 'form-check-label' %>
      </div>
    </div>
  </div>

  <div class="row justify-content-center">
    <button type="button" class="btn btn-sm btn-secondary mr-1" data-dismiss="modal">Cancelar</button>
    <%= f.submit class: 'btn btn-sm btn-primary', value: "Guardar" %>
  </div>

<% end %>
