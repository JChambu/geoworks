<tr id="<%= analytics_dashboard.id %>">
  <td><%= analytics_dashboard.title %></td>
  <td><%= analytics_dashboard.description %></td>
  <td><%= analytics_dashboard.kpi_type %></td>
  <td class="text-center">
    <% if can? :indicators, :edit%>
      <%= link_to edit_project_type_dashboard_analytics_dashboard_path(@project_type, @dashboard, analytics_dashboard), remote: true do %> <i class="fas fa-edit"></i><% end %>
    <% end %>
  </td>
  <td class="text-center">
    <% if can? :indicators, :destroy %>
      <%= link_to project_type_dashboard_analytics_dashboard_path(@project_type, @dashboard, analytics_dashboard), method: :delete, data: { confirm: '¿Está seguro?' } do %> <i class="fas fa-trash-alt"></i><% end %>
    <% end %>
  </td>
</tr>
