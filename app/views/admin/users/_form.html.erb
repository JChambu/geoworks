<div class="offset-md-3 col-md-6">
  <div class="card m-2 shadow">
    <div class="card-body">

      <%= simple_form_for @user do |f| %>

        <div class="form-group">
          <div class="row justify-content-center">
            <%= f.label :name, class:'col-md-3 text-right col-form-label' %>
            <div class="col-md-6">
              <%= f.input :name, label: false, input_html: {class: 'form-control form-control-sm'} %>
            </div>
          </div>

          <div class="row justify-content-center">
            <%= f.label :email, class:'col-md-3 text-right col-form-label' %>
            <div class="col-md-6">
              <%= f.input :email, label: false, input_html: {class: 'form-control form-control-sm'} %>
            </div>
          </div>

          <div class="row justify-content-center">
            <%= f.label :password, class:'col-md-3 text-right col-form-label' %>
            <div class="col-md-6">
              <%= f.input :password, label: false, input_html: {class: 'form-control form-control-sm'} %>
            </div>
          </div>

          <div class="row justify-content-center">
            <%= f.label :password_confirmation, 'Confirmar contraseÃ±a',class:'col-md-3 text-right col-form-label' %>
            <div class="col-md-6">
              <%= f.input :password_confirmation, label: false, input_html: {class: 'form-control form-control-sm'} %>
            </div>
          </div>
        </div>

        <div class="row justify-content-center">
          <%= link_to t('.cancel', :default => t("helpers.links.cancel")), admin_users_path, :class => 'btn btn-secondary' %>
          <%= f.submit :class => 'btn btn-primary', value: 'Guardar' %>
        </div>

      <% end %>

    </div>
  </div>
</div>
