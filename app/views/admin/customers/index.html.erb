<p id="notice"><%= notice %></p>
<div class="card m-2 shadow">
  <div class="card-body">
    <div class="row">
      <div class="col-md-6">
        <h1>Corporaciones</h1>
      </div>
      <div class="col-md-6 text-right">
        <%= link_to 'Nuevo', new_admin_customer_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>

<div class="card m-2 shadow">
  <div class="card-body custom-card-body-np">
    <div class="table-responsive">
      <table class="table table-hover table-striped table-bordered m-0">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Subdominio</th>
            <th colspan="2" class="text-center">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.name %></td>
              <td><%= customer.subdomain %></td>
              <td class="text-center">
                <%= link_to edit_admin_customer_path(customer) do %><i class="fas fa-edit"></i><% end %>
              </td>
              <td class="text-center">
                <%= link_to admin_customer_path(customer), method: :delete, data: { confirm: '¿Está seguro?' } do %><i class="fas fa-trash-alt"></i><% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<br>
