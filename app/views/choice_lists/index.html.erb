<p id="notice"><%= notice %></p>

<div class="col-md-12">
  <h1>Listados</h1>
</div>

<div class="col-md-12 text-right sub-header">
  <% if can? :choice_lists, :new %>
    <%= link_to 'Nuevo Listado', new_choice_list_path, class: "btn btn-primary" %>
  <% end %>
</div>

<div class="x_panel card">
  <div class="x_content">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Nombre</th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
          <% @choice_lists.each do |choice_list| %>
            <tr>
              <td><%= choice_list.name %></td>
              <% if can? :choice_lists, :edit %>
                <td><%= link_to edit_choice_list_path(choice_list) do %> <i class="fas fa-edit"></i><%end%></td>
              <% end %>
            <% if can? :choice_lists, :delete %>
              <td><%= link_to choice_list, method: :delete, data: { confirm: '¿Está seguro?' } do %> <i class="fas fa-trash-alt"></i> <%end%></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
