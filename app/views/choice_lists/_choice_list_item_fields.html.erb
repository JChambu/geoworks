<fieldset>
  <div class="row justify-content-center">
    <%= f.label :name, 'Item', class:'col-md-2 text-right col-form-label' %>
    <div class="col-md-5">
      <%= f.input :name, label: false, input_html: {class: 'form-control form-control-sm'}%>
      <%= f.hidden_field :_destroy%>
    </div>
    <div class="col-md-1">
      <%= link_to '#', class: "remove" do %><i class="fas fa-trash-alt" title="Eliminar atributo"></i><% end %>
    </div>
  </div>
</fieldset>
