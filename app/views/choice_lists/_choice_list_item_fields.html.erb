<fieldset>
  <div class="form-group col-md-12">
    <div class="col-md-1 text-right">
      <%= f.label :name, 'Item' %>
    </div>
    <div class="col-md-3">
      <%= f.input :name, label: false, input_html: {class: 'form-control'}%>
      <%= f.hidden_field :_destroy%>
    </div>
    <div class="col-md-3">
      <%= link_to '#', class: "remove" do  %> <i class="fas fa-trash-alt" title="Eliminar atributo"></i> <%end %> 

  </div>
</fieldset>
