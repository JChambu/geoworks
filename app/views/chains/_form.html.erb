<%= simple_form_for @chain, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :identifier %>
  <%= f.input :alias %>
  <%= f.input :objetive, as: :string %>
  
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                chains_path, :class => 'btn' %>
  </div>
<% end %>
