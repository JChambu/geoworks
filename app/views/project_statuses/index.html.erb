<p id="notice"><%= notice %></p>

<h1>Project Statuses</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_statuses.each do |project_status| %>
      <tr>
        <td><%= project_status.name %></td>
        <td><%= project_status.color %></td>
        <td><%= link_to 'Edit', edit_project_type_project_status_path(project_status.project_type_id, project_status) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project Status', new_project_type_project_status_path(@project_type) %>
