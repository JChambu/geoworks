<%= simple_form_for [@project_type, @project_status]  do |form| %>
  <% if project_status.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project_status.errors.count, "error") %> prohibited this project_status from being saved:</h2>

      <ul>
        <% project_status.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="x_panel card">
    <div class="x_content">

      <div class="form-group col-md-12">
        <div class="col-md-1 text-right">
          <%= form.label :name, 'Nombre' %>
        </div>
        <div class="col-md-3">
          <%= form.text_field :name, id: :project_status_name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group col-md-12">
        <div class="col-md-1 text-right">
          <%= form.label :color %>
        </div>
        <div class="col-md-1">
          <%= form.color_field :color, id: :project_status_color, class: "form-control" %>
        </div>
      </div>

      <div class="form-group col-md-12 form-actions">
        <div class="col-md-4 text-right">
          <%= link_to t('.cancel', :default => t("helpers.links.cancel")), project_type_project_statuses_path(@project_type), :class => 'btn btn-default' %>
          <%= form.submit class: 'btn btn-primary', value: "Guardar" %>
        </div>
      </div>

    </div>
  </div>
<% end %>
