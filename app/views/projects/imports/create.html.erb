<% if notice %>
  <div class="notice pl-3 my-1">
    <p><%= notice %></p>
  </div>
<% end %>
<% if alert %>
  <div class="d-flex justify-content-center">
    <p class="notice text-danger my-1"><%= alert %></p>
  </div>
<% end %>
<div class="card m-2 shadow">
  <div class="card-body p-3">
    <div class="row justify-content-center">
      <h2 class="mx-0">Descargar archivo para realizar las correcciones</h2>
    </div>
  </div>
</div>
<div class="card m-2 shadow">
  <div class="card-body p-3">
    <div class="row justify-content-center pt-1 my-1">
      <div class="col-md-4 text-center">
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")), new_project_type_projects_import_path(@project_type), :class => 'btn btn-sm btn-secondary mr-1' %>
        <%= link_to t('.download', :default => t("helpers.links.download")), download_errors_project_type_projects_import_path(@project_type), :class => 'btn btn-sm btn-secondary mr-1' %>
      </div>
    </div>
  </div>
</div>
