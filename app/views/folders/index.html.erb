<div class="card m-2 shadow">
  <div class="card-body">
    <div class="row">
      <div class="col-md-3">
        <h1 class="m-0">Carpetas para Proyectos</h1>
        <p class="m-0 pt-2" id="notice"><%= notice %></p>
      </div>
      <div class="col-md-6 text-center">

      </div>
      <div class="col-md-3 text-right py-1">
        <%= link_to 'Nueva', new_folder_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>

<div class="card m-2 shadow">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover table-striped table-bordered m-0">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Proyectos Asociados</th>
            <th class="text-center">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @folders.each do |folder| %>
            <tr>
              <td><%= folder.name %></td>
              <td>
                <% folder.project_types.each do |project_type| %>
                  <div><%= project_type.name %></div>
                <% end %>
              </td>
              <td class="text-center">
                <%= link_to edit_folder_path(folder) do %> <i class="fas fa-edit" title="Editar" style="margin-right:7px;"></i><% end %>
                <%= link_to folder, method: :delete, data: { confirm: '¿Está seguro?' } do %> <i class="fas fa-trash-alt" title="Eliminar"></i> <%end%>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
