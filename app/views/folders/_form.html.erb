<div class="offset-md-3 col-md-6">
  <div class="card m-2 shadow">
    <div class="card-body">
      <%= simple_form_for(folder) do |f| %>
        <% if folder.errors.any? %>
          <div id="error_explanation">
            <ul><% folder.errors.full_messages.each do |message| %><li><%= message %></li><% end %></ul>
          </div>
        <% end %>
        <div class="row justify-content-center">
          <%= f.label :name, 'Nombre', class: 'col-md-2 text-right col-form-label' %>
          <div class="col-md-6">
            <%= f.text_field :name, class: "form-control form-control-sm" %>
          </div>
        </div>
        <div class="row justify-content-center">
          <%= link_to t('.cancel', :default => t("helpers.links.cancel")), folders_path, :class => 'btn btn-secondary mr-1' %>
          <%= f.submit class: 'btn btn-primary', value: "Guardar"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
