<%- model_class = User -%>
<div class="col-md-12">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<div class="col-md-12 text-right sub-header">
  <%= link_to t('.new', :default => t("helpers.links.new")), new_user_path,:class => 'btn btn-primary' %>
</div>

<div class="x_panel card">
  <div class="x_content">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th><%= model_class.human_attribute_name(:id) %></th>
            <th><%= model_class.human_attribute_name(:email) %></th>
            <th><%= model_class.human_attribute_name(:name) %></th>
            <th><%= model_class.human_attribute_name(:role) %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= link_to user.email, user_path(user) %></td>
              <td><%= user.name %></td>
              <td><%= user.human_role %></td>
              <td><%= link_to edit_user_path(user) do %> <i class="fas fa-edit"></i><%end%></td>
              <td><%= link_to user_path(user), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '¿Está seguro?')) } do %> <i class="fas fa-trash-alt"></i> <%end%> </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= pager @users %>
