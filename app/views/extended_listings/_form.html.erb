<%= content_for :head do %>
  <script type="text/javascript">

    <% if @extended_listing.the_geom %>

    Navarra.geocoding_ol.latitude_ol = <%= @extended_listing.the_geom.y %>
Navarra.geocoding_ol.longitude_ol = <%= @extended_listing.the_geom.x %>
<% end %>

  </script>
<% end  %>
<%= simple_form_for(@extended_listing) do |f| %>
  <%= f.error_notification %>

  <div class="row-fluid">
    <div id="possible_duplicates" class="span12"></div>

    <div class="form-inputs span12">
      <div class="col-md-12">
        <%= f.input :name %>
        <%= f.input :poi_type_id, :collection => poi_types_for_select %>
        <%= f.input :poi_sub_type_id, :collection => poi_type_sub_types_for_select(@extended_listing.poi_type_id) %>
        <%= f.input :phone %>

        <%= f.input :phone_2 %>
        <%= f.input :website%>
        <%= f.input :email%>
        <%= f.input :city_id,  collection: city_for_chosen(@extended_listing.city_id),  input_html: {class: "col-md-8"} %>
        <%= f.input :street, input_html: {class: 'street'} %>
        <%= f.input :street_2, input_html: {class: 'street'} %>
        <%= f.input :street_3, input_html: {class: 'street'} %>
        <%= f.input :number %>
        <%= f.input :latitude  %>
        <%= f.input :longitude %>
      </div>
      <div class="span12"> 
        <div class="span6">
          <%= link_to t("views.poi.form.buttons.suggest_location"), "#", :class => 'btn', :id => 'suggest-locations-btn-el' %>
        </div>
      </div>
      <div id="map"></div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>
