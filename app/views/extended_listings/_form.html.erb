<%= simple_form_for(@extended_listing) do |f| %>
  <%= f.error_notification %>

  <div class="row-fluid">
    <div id="possible_duplicates" class="span12"></div>

    <div class="form-inputs span12">
      <div class="span3">
        <%= f.input :name %>
      </div>
      <div class="span3" >
        <%= f.input :category_id, collection: categories_for_select%>
      </div>
      <div class="span3">
        <%= f.input :phone %>
      </div>
      <div class="span3">
        <%= f.input :source%>
      </div>
    </div>
    <div class="span12"> 
      <div class="span6">
        <%= f.input :city_id,  collection: city_for_chosen(@extended_listing.city_id),  input_html: {class: "span8"} %>
      </div>
      <div class="span3">
        <%= f.input :street, input_html: {class: 'street'} %>
      </div>
      <div class="span3">
        <%= f.input :number %>
        <%= f.input :latitude %>
        <%= f.input :longitude %>
      </div>
    </div>
        


  
    <div class="span12"> 
      <div class="span6">
          <%= link_to t("views.poi.form.buttons.suggest_location"), "#", :class => 'btn', :id => 'suggest-locations-btn-el' %>
      </div>
      <div class="span6">
            <%= link_to t("views.poi.form.buttons.add_location"), "#", :class => 'btn', :id => 'add-marker-btn-el' %>
      </div>
    
    </div>
  
  </div>
  
  
  <div id='map'></div>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>
