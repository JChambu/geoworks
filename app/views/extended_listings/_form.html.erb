<%= simple_form_for(@extended_listing) do |f| %>
  <%= f.error_notification %>

  <div class="row-fluid">
    <div id="possible_duplicates" class="span12">
    </div>

  <div class="form-inputs">
    
    <%= f.input :city_id,  collection: city_for_chosen(@extended_listing.city_id),  input_html: {class: "span8"} %>
    <%= f.input :category_id, collection: categories_for_select%>
    <%= f.input :name %>
    <%= f.input :street, input_html: {class: 'street'} %>
    <%= f.input :phone %>
    <%= f.input :address, readonly: true %>
    <%= f.input :number, readonly: true %>
    <%= f.input :source%>

  </div>
<div id='map'>
</div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
