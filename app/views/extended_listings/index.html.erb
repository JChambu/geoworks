<%- model_class = ExtendedListing -%>
<div class="row tile_count">
  <div class="animated flipInY col-md-2 col-sm-4 col-xs-4 tile_stats_count">
    <div class="left"></div>
    <div class="right">
      <span class="count_top"><i class="fa fa-user"></i> Total Registros</span>
      <div class="count"><%= @extended_listings.count %></div>
    </div>
  </div>

      <div class="x_panel">
          <div class="x_panel tile fixed_height_320">
            <div class="x_title">
              <h2>Filtrar</h2>
              <ul class="nav navbar-right panel_toolbox">
                <li><a class="collapse-link" id = "collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
              </ul>
              <div class="clearfix"></div>
            </div>
            <div class="x_content">
            <%= render "search_panel" %>
          </div>
          </div>
          </div>
  <div class="span12">
    <div class="span11">
      <h2>  <%= link_to 'Nuevo', new_extended_listing_path, class: 'btn btn-primary' %></h2>


          <div class="pager pagination">
            <%= pager @extended_listings %>
          </div>
          <div class="x_panel">
            <table class="table table-striped table-condensed">
              <thead>
                <tr>
                  <th><%= model_class.human_attribute_name(:name) %></th>
                  <th><%= model_class.human_attribute_name(:street) %></th>
                  <th><%= model_class.human_attribute_name(:city) %></th>
                  <th><%= model_class.human_attribute_name(:user) %></th>
                  <th><%= model_class.human_attribute_name(:status) %></th>
                  <th></th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @extended_listings.each do |extended_listing| %>
                  <tr>
                    <td><%= extended_listing.name %></td>
                    <td><%= extended_listing.street %></td>
                    <td><%= extended_listing.city_id %></td>
                    <td><%= extended_listing.user_id %> </td>
                    <td><%= extended_listing.created_at %></td>
                    <td><%= poi_status_label extended_listing %></td>
                    <td><%= link_to  edit_extended_listing_path(extended_listing), class:"btn btn-info btn-xs"  do %> <i class="fa fa-pencil"> Edit </i>  <%  end %> </td>
                    <%if current_user.role  == 'Admin'  %>
                      <td><%= link_to extended_listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" do %> <i class='fa fa-trash-o'> Eliminar</i><% end %> </td>
                    <% end %>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <br>
          </div>
        </div>
      </div>

