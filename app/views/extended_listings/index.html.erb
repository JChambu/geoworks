<%- model_class = ExtendedListing -%>

<div class="row-fluid">
  <div class="span12">
    <div class =" span6">

      <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize%> - #[<%= @extended_listings.count %>]</h1>
    </div>
    <div class ="span6">
      <h2>  <%= link_to 'Nuevo', new_extended_listing_path, class: 'btn btn-primary' %></h2>
    </div>
  </div>

  <%= render "search_panel" %>
  <%= pager @extended_listings %>
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:name) %></th>
        <th><%= model_class.human_attribute_name(:street) %></th>
        <th><%= model_class.human_attribute_name(:city) %></th>
        <th><%= model_class.human_attribute_name(:user) %></th>
        <th><%= model_class.human_attribute_name(:status) %></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @extended_listings.each do |extended_listing| %>
        <tr>
          <td><%= extended_listing.name %></td>
          <td><%= extended_listing.street %></td>
          <td><%= extended_listing.city.complete_name %></td>
          <td><%= extended_listing.user.name %></td>
          <td><%= extended_listing.created_at %></td>
          <td><%= poi_status_label extended_listing %></td>
          <td><%= link_to 'Edit', edit_extended_listing_path(extended_listing) %></td>
        <%if current_user.role  == 'Admin'  %>
          <td><%= link_to 'Destroy', extended_listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>

