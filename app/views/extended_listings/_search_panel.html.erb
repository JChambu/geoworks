<%= simple_form_for @search, :url =>@search_ext, html: {method: :get, class: "form-inline"} do |f|  %>
  <div class="span12">
    <div class="span2">
      <%= control_group(f.select( :user_id_eq,  users_for_select,  :include_blank => true), User.human_attribute_name(:user)) %>

        <%= control_group(f.select(:poi_status_id_eq, poi_statuses_for_select, :selected => @poi_status_id, :include_blank => true), Poi.human_attribute_name(:poi_status_id)) %>
    </div>

    <div class="span2">
      <%= control_group(f.select(:category_id_eq, categories_for_select, :include_blank => true), Category.human_attribute_name(:name)) %>
    </div>
    <div class="span2">
      <%= f.input :country_id_eq, collection:  countries_for_select, :include_blank => true, label: Country.human_attribute_name(:name) %>
    </div>
    <div class="span2">
    <%= control_group(f.select(:province_id_eq, provinces_for_select(@country_id), :include_blank => true), Province.human_attribute_name(:name)) %>
    </div>

    <div class="span2">
      <%= control_group(f.text_field(:created_at_gteq, :value => @from_date), Poi.human_attribute_name(:control_date_from)) %>
      <%= control_group(f.text_field(:created_at_lteq, :value => @to_date), Poi.human_attribute_name(:control_date_to)) %>
    </div>
  </div>
    <div class="form-actions">
      <%= f.submit(t("buttons.search"), :class => 'btn') %>
    </div>
<% end %>
