<p id="notice"><%= notice %></p>

<h1>Layers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Layer</th>
      <th>Url</th>
      <th>Description</th>
      <th>Type layer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @layers.each do |layer| %>
      <tr>
        <td><%= layer.name %></td>
        <td><%= layer.layer %></td>
        <td><%= layer.url %></td>
        <td><%= layer.description %></td>
        <td><%= layer.type_layer %></td>
        <td><%= link_to 'Show', layer %></td>
        <td><%= link_to 'Edit', edit_layer_path(layer) %></td>
        <td><%= link_to 'Destroy', layer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

