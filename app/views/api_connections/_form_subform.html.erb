<% if notice %>
  <div class="notice pl-3">
    <p><%= notice %></p>
  </div>
<% end %>
<% if alert %>
  <div class="d-flex justify-content-center">
    <p class="notice text-danger"><%= alert %></p>
  </div>
<% end %>

