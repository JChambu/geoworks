<!-- Preheader -->
<div class="preheader" style="display: none; max-width: 0; max-height: 0; overflow: hidden; font-size: 1px; line-height: 1px; color: #fff; opacity: 0;">
  Has recibido un nuevo mensaje.
</div>

<!-- Body -->
<table border="0" cellpadding="0" cellspacing="0" width="100%" style="max-width:600px; margin: auto;">
	<tr>
		<td align="center" style="border: 5px solid #d4dadf;border-radius: 20px;">
			<table border="0" cellpadding="0" cellspacing="0" width="100%">
				<tr>
					<td align="center" style="padding: 30px 24px 0px 24px; font-family: 'Source Sans Pro', Helvetica, Arial, sans-serif; font-size:20px; line-height: 20px; color: #666;">
						<%= image_tag attachments['logo_corp.png'].url, style:"max-width: 25%" %>
          				<div style="margin-top: 30px;">
            				<%= @header_content.html_safe%>
          				</div>
          				<div style="width: 100%; margin-top: 10px; display: inline-block;">
            				<a href="http://www.gisworking.com/" target="_blank" style="text-decoration: none;">
              					<p style="font-size: 0.5em; margin: 8px 0px 0px 20px; line-height:0px; color: #666">powered by</p>
              					<%= image_tag attachments['logo.png'].url, style:"width:20%; margin:0px" %>
            				</a>
          				</div>		
    				</td>
				</tr>
			</table>

   			<table border="0" cellpadding="0" cellspacing="0" width="100%">
   				<tr>
   					<td align="left" valign="top" style="padding: 10px 10px 24px 10px; font-family: 'Source Sans Pro', Helvetica, Arial, sans-serif; color: #666; line-height: 24px;">
   						<div>
   							<% if !@html_content.nil? %>
   							<% index_img = 0 %>
	   							<% @html_content.each do |html|  %>
	   								<% if html[0..13] == "app_img_attach" %>
	   									<% img_array = html[14..-1].split(",") %>
	   									<% img_array.each do |image,index| %>
	   										<% index_img += 1 %>
	   										<% img_src = "imagen"+index_img.to_s+".png" %>
	   										<%= image_tag attachments[img_src].url, style:"width: 40%; margin:10px 30%;" %>
	   									<% end %>
	   								<% else %>
		   							  <p><%= html.html_safe %></p>
  									<% end %>
   								<% end %>
   							<% end %>
							</div>
   					</td>
   				</tr>
   				<tr>
          <td align="center" style="font-family: 'Source Sans Pro', Helvetica, Arial, sans-serif; font-size: 14px; line-height: 20px; color: #666; padding: 40px 10%; font-size:0.8em">
            <p style="margin: 0;color: #666">Si recibiste este correo electrónico por error, por favor eliminalo. Este e-mail se envía automáticamente. No responder a esta dirección de correo.<br>Copyright &copy; 2025 Geoworks. Todos los derechos reservados.</p>
          </td>
        </tr>
   			</table>

		</td>
	</tr>
</table>   			
