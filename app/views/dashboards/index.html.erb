<p id="notice"><%= notice %></p>
<div class="col-md-12">
  <h1>Tableros de <%= project_name.name %></h1>
</div>
<div class="col-md-12 col-sm-12 col-xs-12 sub-header">
  <div class="float-right text-right">
    <%= link_to 'Nuevo Tablero', new_project_type_dashboard_path(@project_type), class: "btn btn-primary" %>
  </div>
</div>
<div class="col-md-12 col-sm-12 col-xs-12">
  <div class="x_panel card">
    <div class="x_content">

      <table class="table table-hover">
        <thead>
          <tr>
            <th>Nombre</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @dashboards.each do |dashboard| %>
            <tr>

              <td><%= dashboard.name %></td>
              <% if can? :project_types, :new %>
              <td><%= link_to  project_type_dashboard_analytics_dashboards_path(@project_type.id,dashboard) do %><h3><i class="fas fa-database" title="Indicadores" style="font-size: 0.7em; text-align: left"></i></h3><% end %> </td>
          <% end %>
              <% if can? :project_types, :new %>
              <td><%= link_to  project_type_dashboard_path(@project_type.id,dashboard) do %> <h3><i class="fas fa-eye" title="Ver" style="font-size: 0.7em; text-align: left"></i></h3> <% end %> </td>
          <% end %>
              <% if can? :dashboards, :edit %>
              <td><%= link_to  edit_project_type_dashboard_path(@project_type, dashboard) do %> <h3><i class="fas fa-edit" title="Editar" style="font-size: 0.7em; text-align: left"></i></h3> <% end %></td>
          <% end %>
              <% if can? :dashboards, :destroy %>
              <td><%= link_to do %><h3><i class="fas fa-trash-alt" title="Eliminar" style="font-size: 0.7em; text-align: left"></i></h3><% end %> </td>
          <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
