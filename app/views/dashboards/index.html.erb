<p id="notice"><%= notice %></p>

<div class="card m-2 shadow">
  <div class="card-body">
    <div class="row">
      <div class="col-md-6">
        <h1 class="m-0">Tableros de <%= project_name.name %></h1>
      </div>
      <div class="col-md-6 text-right">
        <%= link_to 'Nuevo', new_project_type_dashboard_path(@project_type), class: "btn btn-primary" %></div>
    </div>
  </div>
</div>

<div class="offset-md-2 col-md-8">
  <div class="card m-2 shadow">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover table-striped table-bordered m-0">
          <thead>
            <tr>
              <th>Nombre</th>
              <th class="text-center">Indicadores</th>
              <th class="text-center" colspan="3">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @dashboards.each do |dashboard| %>
              <tr>
                <td><%= dashboard.name %></td>
                <td class="text-center"><%= link_to  project_type_dashboard_analytics_dashboards_path(@project_type.id,dashboard) do %><h3><i class="fas fa-database" title="Indicadores" style="font-size: 0.7em; text-align: left"></i></h3><% end %> </td>
                <td class="text-center"><%= link_to  project_type_dashboard_path(@project_type.id,dashboard) do %> <h3><i class="fas fa-eye" title="Ver" style="font-size: 0.7em; text-align: left"></i></h3> <% end %> </td>
                <td class="text-center"><%= link_to  edit_project_type_dashboard_path(@project_type, dashboard) do %> <h3><i class="fas fa-edit" title="Editar" style="font-size: 0.7em; text-align: left"></i></h3> <% end %></td>
                <td class="text-center"><%= link_to do %><h3><i class="fas fa-trash-alt" title="Eliminar" style="font-size: 0.7em; text-align: left"></i></h3><% end %> </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
