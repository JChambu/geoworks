<h1>Graphics Properties</h1>

<table>
  <thead>
    <tr>
      <th>Color</th>
      <th>Height</th>
      <th>Width</th>
      <th>Title</th>
      <th>Type chart</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @graphics_properties.each do |graphics_property| %>
      <tr>
        <td><%= graphics_property.color %></td>
        <td><%= graphics_property.height %></td>
        <td><%= graphics_property.width %></td>
        <td><%= graphics_property.title %></td>
        <td><%= graphics_property.chart_id %></td>
        <td><%= link_to 'Show', project_type_dashboard_graphics_property_path(@project_type, @dashboard, graphics_property.id) %></td>
        <td><%= link_to 'Edit', edit_project_type_dashboard_graphics_property_path(@project_type, @dashboard,graphics_property) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

