<div class="container body">
  <div class="main_container">
    <div class="col-md-3 left_col">
      <div class="left_col scroll-view">
        <div class="navbar nav_title" style="border: 0;">
          <%= link_to  root_path() do  %>
            <%= image_tag('geoworks_h.png', height: '100%', width: '70%')%>
          <% end %>
        </div>
        <div class="clearfix"></div>

        <!-- menu prile quick info -->
        <div class="profile">
          <div class="profile_pic">
            <span class="fa fa-user img-circle profile_img"> </span>
          </div>
          <div class="profile_info">
            <span>Bienvenido,</span>
            <%= link_to t('menu.logout'), destroy_user_session_path, method: :delete %>
            <h2><%=current_user.name  %> </h2>
          </div>
        </div>
        <!-- /menu prile quick info -->
        <br />
        <!-- sidebar menu -->
        <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
          <div class="menu_section">
            <h3>General</h3>
            <ul class="nav side-menu">
              <% if current_user.role == 'Admin' %>
                <li><%= link_to  project_types_path() do %><i class= "fa fa-edit"></i>Proyectos<% end %></li>
              <% end %>
              <li><a><i class="fa fa-desktop"></i> Servicios <span class="fa fa-chevron-down"></span></a>
                <ul class="nav child_menu" style="display: none">
                  <% if current_user.name == 'Admin' %>
                  <li><%= link_to  t('menu.admin.extended_listings'), extended_listings_path() %></li>

                    <li><%=  link_to  t('menu.admin.extended_listings_georeferenced'), georeferenced_extended_listings_path  %></li>
                  <% end  %>
                </ul>
              </li>

              <li><a><i class="fa fa-cog"></i> Ajustes <span class="fa fa-chevron-down"></span></a>
                <ul class="nav child_menu" style="display: none">

                  <li><%= link_to t('menu.users.title'), users_path() %></li>
                  <li><%= link_to t('menu.customers'), customers_path() %></li>
                  <li><%= link_to t('menu.admin.street_types'), street_types_path() %></li>
                  <li><%= link_to t('menu.admin.poi_types'), poi_types_path() %></li>
                  <li><%= link_to t('menu.admin.load_locations_types'), load_locations_path() %></li>
                  <li><%= link_to t('menu.admin.categories'), categories_path() %></li>
                  <li><%= link_to t('menu.admin.categories'), categories_path() %></li>
                </ul>
              </li>
            </ul>
          </div>

        </div>
        <!-- /sidebar menu -->

      </div>
    </div>

    <!-- top navigation -->
    <div class="right_col" role="main">
      <div class="row">
    <nav class="navbar navbar-default">
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">

          <%if params[:controller] == 'project_types' %>
             <%if params[:action] == 'dashboard' %>
            <li><%= link_to  new_project_type_analytics_dashboard_path(params[:id]), remote: true do  %><i class="fa fa-plus-circle fa-2x"></i> 
              <% end %> </li>
            <li><%= link_to project_type_filters_path(params[:id]) , :remote => true  do  %><i class="fa fa-filter fa-2x"></i> 
              <% end %> </li>
          <% end %>
          <% end %>
        </ul>
      </div>
    </nav>

      </div>
      </div>
    <!-- /top navigation -->
    <!-- page content -->
    <div class="right_col" role="main">
      <div class="row">
        <%= yield %>
        <!-- footer content -->
      </div>
    </div>
    <!-- /page content -->
    <footer>
      <p class="pull-right">Geoworks by <a href="https://gisworking.com">Gisworking</a>  
      </p>
      <div class="clearfix"></div>
    </footer>
    <!-- /footer content -->

  </div>
</div>
