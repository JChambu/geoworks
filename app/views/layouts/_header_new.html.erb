<div class="container body">
  <div class="main_container">
    <div class="col-md-3 left_col">
      <div class="left_col scroll-view">
        <div class="navbar nav_title" style="border: 0;">
          <%= link_to  "#", class: "site_title" do  %> <%= image_tag "logo_geoworks2.png" %> <% end %>
        </div>

        <div class="clearfix"></div>

        <!-- menu profile quick info -->
        <div class="profile clearfix">
          <div class="profile_pic">
            <img src="images/img.jpg" alt="..." class="img-circle profile_img">
          </div>
          <div class="profile_info">
            <span>Welcome,</span>
            <h2><%= current_user.name %></h2>
          </div>
        </div>
        <!-- /menu profile quick info -->

        <br />

        <!-- sidebar menu -->
        <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
          <div class="menu_section">
            <h3>General</h3>
            <ul class="nav side-menu">
              <li><%= link_to project_types_path() do %><i class="fa fa-folder-open"></i> Proyectos <span class="fa fa-chevron-down"></span><% end %>
              </li>
              <li><a><i class="fa fa-clipboard"></i> Servicios <span class="fa fa-chevron-down"></span></a>

                <ul class="nav child_menu" style="display: block">
                  <% if current_user.name == 'Admin' %>
                  <li><%= link_to  t('menu.admin.extended_listings'), extended_listings_path() %></li>

                    <li><%=  link_to  t('menu.admin.extended_listings_georeferenced'), georeferenced_extended_listings_path  %></li>
                  <% end  %>
                </ul>
              </li>
              <li><a><i class="fa fa-cogs"></i> Ajustes <span class="fa fa-chevron-down"></span></a>
              </li>
            </ul>
          </div>
        </div>
        <!-- /sidebar menu -->
      </div>
    </div>
    <!-- top navigation -->
    <div class="top_nav">
      <div class="nav_menu">
        <nav>
          <div class="nav toggle">

          <%if params[:controller] == 'project_types' %>
             <%if params[:action] == 'dashboard' %>
            <a><i class="fa fa-filter"></i></a>
            <a><i class="fa fa-plus-circle"></i></a>
            <%= link_to "#" do %> <%= image_tag "icon-seleccion-poligono.svg", width: "25px" %> <% end %>
            <%= link_to "#" do %> <%= image_tag "icon-punto-radio.svg", width: "25px" %> <% end %>
            <%= link_to "#" do %> <%= image_tag "icon-crear-poligono.svg", width: "25px" %> <% end %>
            <%= link_to "#" do %> <%= image_tag "icon-pintar-punto.svg", width: "25px" %> <% end %>
            <%= link_to "#" do %> <%= image_tag "icon-mapa-calor.svg", width: "25px" %> <% end %>
          <% end %>
          <% end %>
          </div>

          <ul class="nav navbar-nav navbar-right">
            <li class="">
              <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                <img src="images/img.jpg" alt=""><%= current_user.name %>
                <span class=" fa fa-angle-down"></span>
              </a>
              <ul class="dropdown-menu dropdown-usermenu pull-right">
                <li><%= link_to "Perfil", edit_user_path(current_user.id) %></li>
                <li>
                  <a href="javascript:;">
                    <span class="badge bg-red pull-right">50%</span>
                    <span>Settings</span>
                  </a>
                </li>
                <li><a href="javascript:;">Help</a></li>
                <li><%= link_to destroy_user_session_path, method: :delete  do  %><i class="fa fa-sign-out pull-right"></i>Log Out <% end %></li>
              </ul>
            </li>

        </nav>
      </div>
    </div>
    <!-- /top navigation -->

    <div class="right_col" role="main">
      <%= yield %>
    </div>
  </div>
</div>
