                <li>
                  <a href="javascript:;">
                    <span class="badge bg-red pull-right">50%</span>
                    <span>Settings</span>
                  </a>
                </li>
                <li><a href="javascript:;">Help</a></li>
                -->
                <li><%= link_to destroy_user_session_path, method: :delete  do  %> Cerrar Sesi√≥n <i class="fas fa-sign-out-alt"></i> <% end %></li>
              </ul>
            </li>
          </ul>
        </nav>
      </div>
    </div>
    <!-- /top navigation -->
    <div class="right_col" role="main">
      <%= yield %>
    </div>
  </div>
</div>
