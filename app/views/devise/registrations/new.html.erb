<div class="row w-100 align-items-center m-0" >
  <div class="col-md-6 align-middle form-sinin-img vh-100" style="overflow:hidden;" >
  </div>

  <div class="col-md-6 align-middle text-center p-0">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-signin pl-5 pr-5'}) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <center><%=image_tag ENV['VERTICAL_LOGO'], class:'mb-2', width:"252"%></center>
        <%= f.input :email, label: false, placeholder: "E-mail", required: false, autofocus: true, input_html: {class: "form-control"} %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.input :name, label: false, placeholder: "Nombre", required: false, input_html: {class: "form-control"} %>
        <%= f.input :country_code, as: :email, autocomplete: "off", label: false, placeholder: "Cód. País", input_html: {class: "form-control"} %>
        <%= f.input :area_code, autocomplete: "off", label: false, placeholder: "Cód. Área", input_html: {class: "form-control"} %>
        <%= f.input :phone, autocomplete: "off", label: false, placeholder: "Teléfono", input_html: {class: "form-control"} %>
        <%= f.input :password, autocomplete: "off", label: false, placeholder: "Contraseña", input_html: {class: "form-control"} %>
        <br>
        <%= f.submit 'Registrarse', class: 'btn btn-lg btn-primary btn-block mb-2' %>
      </div>

      <br/>
      <div class="text-left">
        <%= render "devise/shared/success_messages", resource: resource %>
      </div>
    <% end %>
  </div>
</div>
