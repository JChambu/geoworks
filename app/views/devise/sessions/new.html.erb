  <div class="form-group">
    <center><%=image_tag 'logo_gw_ver_2.png', class:'mb-2', width:"252"%></center>
    <%= f.input :email, label: false, placeholder: "E-mail", required: false, autofocus: true, input_html: {class: "form-control"} %>
    <%= f.input :password, label: false, placeholder: "ContraseÃ±a", input_html: {class: "form-control"} %>
  </div>

  <%= f.button :submit, "Ingresar", class: 'btn btn-lg btn-primary btn-block mb-2' %>

  <br/>
  <%= render "devise/shared/links" %>
  <%= render "devise/shared/success_messages", resource: resource %>
<% end %>
