<%= form_with(model: role, local: true) do |form| %>
  <% if role.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(role.errors.count, "error") %> prohibited this role from being saved:</h2>

      <ul>
      <% role.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="x_panel card">
  <div class="x_content">

    <div class="form-group col-md-12">
      <div class="col-md-1 text-right">
        <%= form.label 'Nombre' %>
      </div>
      <div class="col-md-3">
        <%= form.text_field :name, id: :role_name, class: "form-control" %>
      </div>
    </div>
    <div>
            <% ModelType.all.each do |mt| %>
              <div>
              <label for=""><%= mt.name %></label>
                <% Event.all.each do |e| %>
                  <label for=""><%=e.name  %></label><%= check_box_tag "permissions[#{mt.id}][#{e.id}]" %>
                     <% end %>
                     <div>
              <% end %>
    </div>
    <div class="form-group col-md-12 form-actions">
      <div class="col-md-4 text-right">
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")), roles_path, :class => 'btn btn-default' %>
        <%= form.submit class: 'btn btn-primary', value: "Guardar" %>
      </div>
    </div>

  </div>
</div>
<% end %>
