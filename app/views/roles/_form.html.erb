  <div class="card m-2 shadow">
    <div class="card-body">

      <%= form_with(model: role, local: true) do |form| %>
        <% if role.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(role.errors.count, "error") %> prohibited this role from being saved:</h2>
            <ul><% role.errors.full_messages.each do |message| %><li><%= message %></li><% end %></ul>
          </div>
        <% end %>

        <div class="row justify-content-center">
          <%= form.label 'Nombre' %>
          <div class="col-md-2">
            <%= form.text_field :name, id: :role_name, class: "form-control form-control-sm" %>
          </div>
        </div>

        <div class="text-center m-4">
          <h3>Permisos</h3>
        </div>

        <div class="row">
          <% ModelType.all.each do |mt| %>
            <div class="col-md-2">
              <h5><%= mt.name %></h5>
              <br>
              <% Event.all.each do |e| %>
                <div class="form-group form-check">
                  <%= check_box_tag "permissions[#{mt.id}][#{e.id}]" %>
                  <label class="form-check-label" for=""><%=e.name %></label>
                </div>
              <% end %>
              <br>
            </div>
          <% end %>
        </div>

        <div class="row justify-content-center">
          <%= link_to t('.cancel', :default => t("helpers.links.cancel")), roles_path, :class => 'btn btn-secondary mr-1' %>
          <%= form.submit class: 'btn btn-primary', value: "Guardar" %>
        </div>

      <% end %>

    </div>
  </div>
