<p id="notice"><%= notice %></p>

<div class="col-md-12">
  <h1>Roles</h1>
</div>

<div class="x_panel card">
  <div class="x_content">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Nombre</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @roles.each do |role| %>
            <tr>
              <td><%= role.name %></td>
              <td><%= link_to edit_role_path(role) do %> <i class="fas fa-edit"></i><%end%></td>
              <td><%= link_to role, method: :delete, data: { confirm: '¿Está seguro?' } do %> <i class="fas fa-trash-alt"></i> <%end%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="col-md-12 text-right">
  <%= link_to 'Nuevo Rol', new_role_path, class: "btn btn-primary" %>
</div>
