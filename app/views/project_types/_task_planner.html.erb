<div id="task_planner-modal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">

    <%= form_tag create_task_planner_path(project_type_id: @project_type), :remote => true, :method => :get   do |f| %>
      <div class="modal-header">
        <h4 class="modal-title"> <%= 'Planificar Tarea' %> </h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
        <div class="modal-body">
          <div class="form-row col-md-12">
            <div class="form-group col-md-6 text-right">
              <h6>Asignar a:</h6>
            </div>
            <div class="form-group col-md-6">
              <%= select_tag :user_id_task, options_for_select(users_for_select_unshare_projects), include_blank: true, class: 'form-control form-control-sm' %>
            </div>
            <div class="form-group col-md-6 text-right">
              <h6>Iniciar:</h6>
            </div>
            <div class="form-group col-md-6">
              <%= text_field_tag :date_task, '',class: 'form-control form-control-sm task_planner_date'%>
            </div>
          </div>
        </div>
        
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
          <%= submit_tag :share, class:"btn btn-primary", value: "Guardar" %>
        </div>

      <% end %>

    </div>
  </div>
</div>
