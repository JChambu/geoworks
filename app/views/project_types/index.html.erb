<%- model_class = ProjectType -%>
<div cqlass="right_col" role="main" style="margin-left: 0 !important;">
  <div class="col-md-12">
    <div class="page-title">
      <div class="title_left">
        <h1 class="title-section">Proyectos</h1>
      </div>
      <%= form_tag project_types_path, method: :get do %>
        <div class="title_right">
          <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
            <div class="input-group">
              <%= text_field_tag(:search_project, '', class: 'form-control',  placeholder: 'Buscar Proyectos' )%>
              <span class="input-group-btn">
                <%= submit_tag 'Buscar' , class: 'btn btn-default'  %>
              </span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-12 col-sm-12 col-xs-12 sub-header">
    <div class="row">
      <div class="col-md-9">
        <ul>
          <%= pager @project_types %>
        </ul>
      </div>
      <div class="col-md-3 text-right">
        <%= link_to 'Nuevo Proyecto', new_project_type_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>

  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel card">
      <div class="x_title">
        <ul class="nav navbar-right panel_toolbox">
          <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
            <ul class="dropdown-menu" role="menu">
              <li><a href="#">Settings 1</a>
              </li>
              <li><a href="#">Settings 3</a>
              </li>
            </ul>
          </li>
          <li><a class="close-link"><i class="fa fa-close"></i></a>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <table class="table table-hover">
          <thead>

            <th><%= model_class.human_attribute_name(:name) %></th>
            <th><%= model_class.human_attribute_name(:count) %></th>
            <th colspan="3"></th>
          </thead>
          <tbody>

            <% @project_types.each do |project_type| %>
              <tr>

                <td><%= link_to project_type.name, project_type_projects_path(project_type) %></td>
                <td><%= project_type.projects.count %></td>
                <td><%= link_to 'Dashboard', project_type_dashboards_path(project_type.id) %></td>
                <td><%= link_to 'Edit', edit_project_type_path(project_type) %></td>

              </tr>
            <% end %>
          </tbody>
        </table>

      </div>
    </div>
  </div>
</div>

