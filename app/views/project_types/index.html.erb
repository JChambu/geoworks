<%- model_class = ProjectType -%>

<p id="notice"><%= notice %></p>
<div cqlass="right_col" role="main" style="margin-left: 0 !important;">
  <div class="col-md-12">
    <div class="page-title">
      <div class="title_left">
        <h1 class="title-section">Proyectos</h1>
      </div>
      <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search for...">
            <span class="input-group-btn">
              <button class="btn btn-default" type="button">Go!</button>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= pager @project_types %>
  <%= link_to 'New Project Type', new_project_type_path %>

  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel card">
      <div class="x_title">
        <ul class="nav navbar-right panel_toolbox">
          <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
            <ul class="dropdown-menu" role="menu">
              <li><a href="#">Settings 1</a>
              </li>
              <li><a href="#">Settings 2</a>
              </li>
            </ul>
          </li>
          <li><a class="close-link"><i class="fa fa-close"></i></a>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <table class="table table-hover">
          <thead>

            <th><%= model_class.human_attribute_name(:name) %></th>
            <th colspan="3"></th>
          </thead>
          <tbody>

            <% @project_types.each do |project_type| %>
              <tr>
                <td><%= link_to project_type.name, project_type_projects_path(project_type) %></td>
                <td><%= link_to 'Dashboard', project_types_dashboard_path(project_type.id) %></td>
                <td><%= link_to "Setting", project_type_analytics_dashboards_path(project_type.id)%></td>
                <td><%= link_to 'Edit', edit_project_type_path(project_type) %></td>

              </tr>
            <% end %>
          </tbody>
        </table>

      </div>
    </div>
  </div>
</div>

