<div id="heatmap-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"> Mapa de Calor </h4>
      </div>
      <div class="modal-body">
        <%= form_tag project_type_create_heatmap_path, :remote => true, :method => :get   do |f| %>
          <div class="form-row col-md-12">
            <div class="form-group col-md-10">
              <label for="">Campos</label>
              <%=select_tag 'q[project_field]',  options_for_select(region_for_select), include_blank: true, class:'proj_field form-control' %>
            </div>
            <div class="form-group col-md-10">
              <label for="">Kpi</label>
            <%=select_tag 'q[project_kpi]',  options_for_select(kpi_for_select), include_blank: true, class:'proj_field form-control' %>
            </div>
            <div class="form-group col-md-2">
        <%= submit_tag :enviar, id: "filtro", class: "envf btn btn-primary" %>
            </div>
        <% end %>
          </div>
      </div>
    </div>
  </div>
</div>
