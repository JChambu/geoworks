<%= content_for :head do %>
  <script type="text/javascript">
<% if @poi_address.the_geom %>

Navarra.poi_addresses.config.lat = <%= @poi_address.the_geom.y %>
Navarra.poi_addresses.config.lon = <%= @poi_address.the_geom.x %>
Navarra.poi_addresses.config.originalLat = <%= @poi_address.the_geom.y %>
Navarra.poi_addresses.config.originalLon = <%= @poi_address.the_geom.x %>
<% end %>

  </script>
<% end  %>
<%= simple_form_for(@poi_address) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs span12">
    <div class="span3">
      <%= f.input :name %>
    </div>
    <div class="span3">
      <%= f.input :name_company %>
    </div>
    <div class="span3">
      <%= f.input :phone_company %>
    </div>
    </div>
  <div class="form-inputs span12">
    <div class="span3">
      <%= f.input :phone %>
    </div>
    <div class="span3">
      <%= f.input :web %>
    </div>
    <div class="span3">
      <%= f.input :birthdate %>
    </div>
  </div>
  <div class="span12">
    <div class="span3">
      <%= f.input :city_name %>
    </div>
    <div class="span3">
      <%= f.input :department_name %>
    </div>
    <div class="span3">
      <%= f.input :province_name %>
    </div>
    <div class="span3">
      <%= f.input :country_name, as: :string %>
    </div>
    </div>
  <div class="span12">
    <div class="span3">
      <%= f.input :street %>
    </div>
    <div class="span3">
      <%= f.input :number %>
    </div>
    <div class="span3">
      <%= f.association :p_action  %>
    </div>

  </div>

  <div class="span3">
    <%= link_to t("views.poi.form.buttons.suggest_location"), "#", :class => 'btn', :id => 'suggest-locations-btn_pa' %>
  </div>
  <div class="row-fluid">
    <div class="span3">
      <%= link_to t("views.poi.form.buttons.add_location"), "#", :class => 'btn', :id => 'add-marker-new-pa' %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  </div>
  <div class="row-fluid">
    <div id="map" class="span12">
    </div>
  </div>
<% end %>
